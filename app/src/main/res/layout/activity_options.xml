<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myrole.OptionsActivity">

    <RelativeLayout
        android:id="@+id/lay_option_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/back_pink_icon" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/action_settings"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/textColorPrimary" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_setting_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_15"
                    android:text="@string/account_setting"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="#d9d6d6" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/material_edit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/edit_profile_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/edit_profile"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/change_pass_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/change_password"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/private_account_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/margin_5"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/private_account"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorGrayDark"
                            android:textSize="@dimen/font_13" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <Switch

                        android:id="@+id/switch_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/general_settings_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_15"
                    android:text="@string/general_settings"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="#d9d6d6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/push_notifications_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/margin_5"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/push_notifications"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorGrayDark"
                            android:textSize="@dimen/font_13" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <Switch

                        android:id="@+id/switch_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />
                </RelativeLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/share_my_role_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/share_my_role"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13"
                        android:visibility="gone" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <TextView
                    android:id="@+id/follow_people_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_15"
                    android:text="@string/follow_people"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="#d9d6d6" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/instagram_friends_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/Contact_friends"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>


                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/facebook_friends_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/facebook_friends"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <TextView
                    android:id="@+id/about_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_15"
                    android:text="@string/about"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="#d9d6d6" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/privacy_policy_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/privacy_policy"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/terms_conditions_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/terms_conditions"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="#d9d6d6" />


                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="Feedback"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_10"
                        android:text="Logout"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrayDark"
                        android:textSize="@dimen/font_13" />
                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/app_version_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_10"
                    android:text="@string/app_version"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorGrayDark"
                    android:textSize="@dimen/font_12" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
