<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:gravity="center_vertical">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray_line_light" />


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/rel_accpet_decline"
        android:layout_toRightOf="@+id/user_icon"
        android:singleLine="true"
        android:text="Name"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/font_13" />


    <RelativeLayout
        android:id="@+id/rel_accpet_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/accept"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/btn_decline"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/follow_btn_outline"
                android:clickable="true"
              android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/font_aweome_close"
                android:textColor="@color/textColorSecondary"
                android:visibility="visible" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/decline"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/accept">

            <TextView
                android:id="@+id/btn_accept"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/follow_btn_outline"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:textStyle="bold"

                android:paddingTop="@dimen/margin_5"
                android:text="@string/font_aweome_check"

                android:textColor="@color/textColorSecondary"
                android:visibility="visible" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/default_avatar" />

</RelativeLayout><!--
</com.balysv.materialripple.MaterialRippleLayout>-->
