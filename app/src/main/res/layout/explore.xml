<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="170dp"
        sothree:umanoParallaxOffset="100dp"
        sothree:umanoScrollableView="@+id/recyclerView"
        sothree:umanoShadowHeight="2dp">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="15dp"
                    sothree:cardBackgroundColor="#fff"
                    sothree:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/search"
                            android:gravity="center_vertical"
                            android:text="Search for People and post"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/lay_fame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card"
                    android:layout_marginTop="15dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#fff" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="#743357"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="HAll OF FAME !!"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_fame"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="START PARTICIPATING AND GET A CHANCE TO BE HERE"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_explore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_explore"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="160dp"
                    android:src="@drawable/explore_background_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_explore"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="160dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_25"
                                android:layout_marginBottom="15dp"
                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown5"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView5"
                                android:layout_marginLeft="@dimen/margin_21"
                                android:layout_marginBottom="-27dp"
                                android:visibility="gone"
                                sothree:srcCompat="@drawable/crown" />
                            <!--<TextView-->
                            <!--android:layout_below="@+id/imageView5"-->
                            <!--android:layout_marginLeft="@dimen/margin_20"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Winner"-->
                            <!--android:textSize="@dimen/font_10"-->
                            <!--/>-->
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin_25"
                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown6"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView6"
                                android:layout_alignStart="@+id/imageView6"
                                android:layout_alignLeft="@+id/imageView6"
                                android:layout_alignParentTop="true"
                                android:layout_marginBottom="-29dp"
                                android:paddingLeft="2dp"
                                android:visibility="gone"
                                sothree:srcCompat="@drawable/crown" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="21dp"
                                android:layout_marginRight="11dp"
                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown7"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView7"
                                android:layout_alignStart="@+id/imageView7"
                                android:layout_alignLeft="@+id/imageView7"
                                android:layout_marginBottom="-27dp"
                                android:paddingLeft="2dp"

                                android:visibility="gone"
                                sothree:srcCompat="@drawable/crown" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15dp"
                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown8"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView8"
                                android:layout_alignStart="@+id/imageView8"
                                android:layout_alignLeft="@+id/imageView8"
                                android:layout_marginBottom="-29dp"
                                android:paddingLeft="2dp"

                                android:visibility="gone"
                                sothree:srcCompat="@drawable/crown" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"

                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown9"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView9"
                                android:layout_alignStart="@+id/imageView9"
                                android:layout_alignLeft="@+id/imageView9"
                                android:layout_marginBottom="-27dp"
                                android:paddingLeft="2dp"
                                android:visibility="gone"
                                sothree:srcCompat="@drawable/crown" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="21dp"
                                android:layout_marginLeft="21dp"
                                android:layout_marginTop="20dp"
                                sothree:srcCompat="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/img_crown10"
                                android:layout_width="57dp"
                                android:layout_height="55dp"
                                android:layout_above="@+id/imageView10"
                                android:layout_alignStart="@+id/imageView10"
                                android:layout_alignLeft="@+id/imageView10"
                                android:layout_marginBottom="-70dp"
                                android:paddingLeft="2dp"
                                android:visibility="gone"

                                sothree:srcCompat="@drawable/crown" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hidden_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2"
                android:minHeight="70dp"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="15dp"
                    sothree:cardBackgroundColor="#fff"
                    sothree:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/back_pink_icon" />

                            <EditText
                                android:id="@+id/search_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/back"
                                android:background="@null"
                                android:focusableInTouchMode="false"
                                android:hint="Search for People and post"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.myrole.loadmore.PullToLoadView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.myrole.loadmore.PullToLoadView>


        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
